                "name": {
                    "type": "string",
                    "description": "会员等级"
                }
            }
        },
        "GroupsInfoInMember": {
            "type": "array",
            "description": "会员分组信息",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "number",
                        "description": "会员分组id"
                    },
                    "name": {
                        "type": "string",
                        "description": "分组名"
                    }
                }
            }
        },
