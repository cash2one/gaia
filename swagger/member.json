                },
                "integral": {
                    "type": "number",
                    "description": "会员积分"
                },
                "pay_times_in_30_days": {
                    "type": "number",
                    "description": "近30天的购买频次"
                },
                "unit_price": {
                    "type": "number",
                    "description": "客单价"
                }
            }
