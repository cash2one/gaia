                },
                "consume_info": {
                    "$ref": "#/definitions/ConsumeInfoInMember"
                },
                "social_info": {
                    "$ref": "#/definitions/SocialInfoInMember"
                },
                "subscribe_info": {
                    "$ref": "#/definitions/SubscribeInfoInMember"
