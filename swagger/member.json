                }, 
                "remark": {
                    "type": "string",
                    "description": "会员备注信息"
                }, 
                "remark_name": {
                    "type": "string",
                    "description": "会员备注名"
                }, 
                "sex": {
                    "type": "string",
                    "description": "会员性别",
                    "format": "male(男), female(女), unknwon(未知)"
                }
            }
