            "type": "object",
            "description": "会员的积分日志",
            "properties": {
                "id": {
                    "type": "number",
                    "description": "优惠券在db中的id"
                },
                "event": {
                    "type": "string",
                    "description": "日志对应的积分事件名"
                },
                "reason": {
                    "type": "string",
                    "description": "积分变更的原因"
                },
                "actor": {
                    "type": "string",
                    "description": "操作人"
                },
                "integral_increment": {
                    "type": "number",
                    "description": "积分变更的数量"
                },
                "current_integral": {
                    "type": "string",
                    "description": "积分变更后的积分数值"
                },
                "created_at": {
                    "type": "string",
                    "description": "积分日志产生的时间"
                }
            }
        },
        "MemberList": {
