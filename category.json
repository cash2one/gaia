            "get": {
                "description": "获取分组列表\n",
                "parameters": [
                    {
                        "name": "category_ids",
                        "in": "query",
                        "description": "array",
                        "required": true,
                        "type": "string",
                        "format": "all, 1,2,4,"
                    },
                    {
                        "name": "owner_id",
                        "in": "query",
                        "required": true,
                        "description": "操作者",
                        "type": "string"
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "type": "string",
                        "description": "当前页"
                    },
                    {
                        "name": "count_per_page",
                        "in": "query",
                        "type": "string",
                        "description": "一页多少条数据"
                    },
                    {
                        "name": "is_display_products",
                        "in": "query",
                        "type": "number",
                        "format": "1 or 0",
                        "description": "是否展示分组中的商品"
                    }
                ],
                "tags": [
                    "category_list"
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "title": "ArrayOfcategories",
                            "type": "array",
                            "items": {
                                "title": "categories",
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "single": {
                                        "type": "boolean"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
